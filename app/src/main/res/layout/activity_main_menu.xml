<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainMenu"
    android:background="@drawable/yogbg">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select a Yoga Style"
        android:textSize="28dp"
        android:typeface="monospace"
        android:id="@+id/select_style_button"
        android:layout_marginTop="96dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="selectAStyleButtonClicked" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I Agree to the Terms of Service"
        android:id="@+id/TOS_check"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:checked="false"
        android:onClick="TOSBoxClicked" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/CustomWorkouts"
        android:textSize="28dp"
        android:id="@+id/custom_workout_button"
        android:layout_below="@+id/select_style_button"
        android:layout_marginTop="29dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/select_style_button"
        android:layout_alignEnd="@+id/select_style_button" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:textSize="28dp"
        android:id="@+id/settings_button"
        android:layout_below="@+id/custom_workout_button"
        android:layout_alignRight="@+id/custom_workout_button"
        android:layout_alignEnd="@+id/custom_workout_button"
        android:layout_marginTop="29dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="settingsButtonClicked" />

</RelativeLayout>
